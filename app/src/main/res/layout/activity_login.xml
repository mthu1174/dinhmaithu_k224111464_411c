<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4F9"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_cute_cat"
            android:layout_marginBottom="20dp"
            android:contentDescription="Cute Logo" />

        <EditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_cute_edittext"
            android:hint="@string/title_username"
            android:padding="14dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_cute_edittext"
            android:hint="@string/title_password"
            android:inputType="textPassword"
            android:padding="14dp" />

        <CheckBox
            android:id="@+id/chkSaveLoginInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/title_savelogin"
            android:textColor="#880E4F" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_cute_button"
            android:backgroundTint="#FF80AB"
            android:onClick="do_login"
            android:text="@string/title_login"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cute_button"
            android:backgroundTint="#F8BBD0"
            android:onClick="do_exit"
            android:text="@string/title_exit"
            android:textColor="#4E3E43"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
